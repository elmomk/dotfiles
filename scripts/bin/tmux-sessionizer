#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(find ~/Documents/git ~/Documents ~/.config ~/.dotfiles  -mindepth 1 -maxdepth 3 -type d | fzf --preview 'tree -CL 1 {}' --preview-window=right:70%:wrap)
    # selected=$(find ~/Documents/git/experimentation/ ~/Documents/git ~/Documents ~/.config ~/.dotfiles ~/work/builds ~/projects ~/ ~/work ~/personal -mindepth 1 -maxdepth 3 -type d | fzf --preview 'tree -C {}' --preview-window=right:70%:wrap)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s "$selected_name" -c "$selected"
    exit 0
fi

if ! tmux has-session -t="$selected_name" 2>/dev/null; then
    tmux new-session -ds "$selected_name" -c "$selected"
fi
#
if ! env | grep -i tmux >/dev/null ; then
    tmux attach -t "$selected_name"
else
    tmux switch-client -t "$selected_name"
fi
